<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.akodi" name="Akodi Wizard" version="1.1.2" provider-name="Akodi">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Akodi</summary>
    <description lang="en">La mejor forma de hacer KODI.</description>
    <platform>all</platform>
  </extension>
</addon>

    <addon id="repository.akodi" name="Akodi Wizard repository" version="1.0.0" provider-name="Akodi">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Akodi Wizard repository">
            <info compressed="false">http://www.akodi.xyz/_repo/addons.xml</info>
            <checksum>http://www.akodi.xyz/_repo/addons.xml.md5</checksum>
            <datadir zip="true">http://www.akodi.xyz/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Repositorio para Akodi Wizard.</summary>
            <description>La mejor forma de hacer KODI.</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
